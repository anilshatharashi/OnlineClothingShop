<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OverflowMenu" parent="@android:style/Widget.Material.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-5dip</item>
        <item name="android:dropDownVerticalOffset">60dip</item>
    </style>

    <style name="clothingListItemStyle">
        <item name="android:paddingStart">@dimen/padding_standard</item>
        <item name="android:paddingEnd">@dimen/padding_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
    </style>

    <style name="clothingDetailsHeadingBold" parent="clothingListItemStyle">
        <item name="android:textSize">@dimen/headline_text_view</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="clothingDetailsLarge" parent="clothingDetailsHeadingBold">
        <item name="android:textSize">20sp</item>
    </style>
</resources>